{
  "name": "copy-selected-files",
  "displayName": "Copy Selected Files",
 "description": "Copy contents of multiple selected files as Markdown for ChatGPT, AI prompts, code reviews, and documentation.",
  "version": "0.0.1",
  "icon": "icon.png",
  "publisher": "jeseem",
  "keywords": [
  "copy files",
  "clipboard",
  "chatgpt",
  "ai",
  "prompt",
  "markdown",
  "productivity",
  "code review",
  "multi file"
],
  "repository": {
  "type": "git",
  "url": "https://github.com/Jeseem24/copy-selected-files"
},
"bugs": {
  "url": "https://github.com/Jeseem24/copy-selected-files/issues"
},
"homepage": "https://github.com/Jeseem24/copy-selected-files",
  "engines": {
    "vscode": "^1.107.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "copy-selected-files.copyContent",
        "title": "Copy Selected Files Content"
      }
    ],
    "menus": {
      "explorer/context": [
        {
          "command": "copy-selected-files.copyContent",
          "when": "explorerResourceIsFolder == false",
          "group": "navigation"
        }
      ]
    },
    "configuration": {
      "title": "Copy Selected Files",
      "properties": {
        "copySelectedFiles.maxFileSizeKB": {
          "type": "number",
          "default": 1024,
          "description": "Maximum file size (in KB) allowed to be copied"
        },
        "copySelectedFiles.enableCodeFences": {
          "type": "boolean",
          "default": true,
          "description": "Wrap copied content in Markdown code fences"
        },
        "copySelectedFiles.includeLanguage": {
          "type": "boolean",
          "default": true,
          "description": "Include language identifier in Markdown code fences"
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src",
    "test": "vscode-test"
  },
  "devDependencies": {
    "@types/vscode": "^1.107.0",
    "@types/mocha": "^10.0.10",
    "@types/node": "22.x",
    "typescript-eslint": "^8.48.1",
    "eslint": "^9.39.1",
    "typescript": "^5.9.3",
    "@vscode/test-cli": "^0.0.12",
    "@vscode/test-electron": "^2.5.2"
  }
}
